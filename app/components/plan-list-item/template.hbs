{{#colour-paper-item title=plan.name class="margin-xl"}}
  <h3 class="margin-sm">{{plan.name}}
    {{#if editable}}
      <a href="javascript:void()" {{action attrs.editPlan}} >{{paper-icon icon="edit" size=1}}</a>
    {{/if}}
  </h3>

  <p>
    {{#paper-chips readOnly=true content=plan.scopes as |item|}}
      <strong>{{item.name}}</strong>
      <em>({{item.description}})</em>
    {{/paper-chips}}
  </p>
{{/colour-paper-item}}
