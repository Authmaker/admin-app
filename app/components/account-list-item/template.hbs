{{#colour-paper-item title=title gravatarHash=sortedUsers.firstObject.gravatarHash hasImage=sortedUsers.firstObject.hasImage}}

  <h3>{{account.name}}</h3>
  {{#paper-button classNames="md-primary" action=(action attrs.editAccount)}}<small>edit</small>{{/paper-button}}
  <p>
    {{#paper-chips readOnly=true content=account.planArray as |plan|}}
      <span>{{plan.name}}</span>
    {{/paper-chips}}
  </p>
  <p>
    {{#paper-chips readOnly=true content=sortedUsers as |user|}}
      {{user.username}}
    {{/paper-chips}}
  </p>

{{/colour-paper-item}}
