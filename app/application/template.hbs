{{#paper-nav-container open=drawerOpen classNames="ember-app"}}

  {{#paper-sidenav classNames="md-sidenav-left md-whiteframe-z2" flex-layout="column" flex=true}}

    {{#paper-toolbar}}
      <div class="md-toolbar-tools">
        <div class="logo">
          <strong>Authmaker</strong>
        </div>
      </div>
    {{/paper-toolbar}}

    {{#paper-content}}
      {{#paper-list}}
        {{#paper-item action=(action 'transitionTo' 'admin.enable') }}Enable Users{{/paper-item}}
        {{#paper-item action=(action 'transitionTo' 'admin.view') }}View Users{{/paper-item}}
        {{#paper-item action=(action 'transitionTo' 'plans') }}Plans{{/paper-item}}
        {{#paper-item action=(action 'transitionTo' 'scopes') }}Permissions{{/paper-item}}
        {{#paper-item action=(action 'transitionTo' 'accounts') }}Accounts{{/paper-item}}
      {{/paper-list}}  
    {{/paper-content}}
  {{/paper-sidenav}}

  {{#paper-content flex-layout="column" flex=true}}
    {{outlet}}
  {{/paper-content}}

  <div class="c-notification__container">
      {{#each notifications as |notification|}}
          {{notification-message notification=notification}}
      {{/each}}
  </div>

{{/paper-nav-container}}
