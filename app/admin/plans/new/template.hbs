  <div class="md-actions" layout="row">

  </div>
{{/paper-dialog}}

{{#paper-dialog class="flex-50" onClose=(action "cancel") clickOutsideToClose=true}}
  <form>
    {{#paper-toolbar}}
      {{#paper-toolbar-tools}}
        <h2>New Permisssion</h2>
        <span class="flex"></span>
        {{#paper-button iconButton=true onClick=(action "cancel")}}{{paper-icon icon="close"}}{{/paper-button}}
      {{/paper-toolbar-tools}}
    {{/paper-toolbar}}

    {{#paper-dialog-content}}
      {{paper-input label="Name" value=model.name}}
      {{paper-input label="Stripe Plan" value=model.stripePlan}}
      <span>Permissions:</span>
      {{#paper-chips readOnly=false removeItem="removeScope" content=model.scopes as |item|}}
        <strong>{{item.name}}</strong>
        <em>({{item.description}})</em>
      {{/paper-chips}}
      <span>Add Permissions:</span>
      {{#paper-list}}
        {{#each availablePermissions as |permission|}}
          <a {{action 'addScope' permission}}>
            {{#colour-paper-item title=permission.name}}
              <h3>{{permission.name}}</h3>
              <p>{{permission.description}}</p>
            {{/colour-paper-item}}
          </a>
        {{/each}}
      {{/paper-list}}
      {{paper-checkbox label="Allow new subscriptions" checked=model.newSubscriptions}}
    {{/paper-dialog-content}}

    {{#paper-dialog-actions class="layout-row"}}
      <span class="flex"></span>
      {{paper-button raised=true label="Save" classNames="md-primary" onClick=(action "savePlan")}}
    {{/paper-dialog-actions}}
  </form>
{{/paper-dialog}}
