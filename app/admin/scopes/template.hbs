{{#paper-toolbar}}
  <h2 class="md-toolbar-tools">
    {{#paper-sidenav-toggle class="menu-sidenav-toggle"}}
      {{paper-icon icon="menu"}}
    {{/paper-sidenav-toggle}}
    <span>Permissions</span>
  </h2>
{{/paper-toolbar}}



{{#paper-list}}
  {{#each content as |scope|}}
    {{#colour-paper-item title=scope.name}}
      <h3>{{scope.name}} {{#if scope.paidFor}}{{paper-icon icon="shopping-cart"}} {{/if}}</h3>
      <p>
        {{scope.description}}
      </p>
    {{/colour-paper-item}}
  {{/each}}
{{/paper-list}}

{{#paper-button classNames="md-fab md-primary bottom-right-button" action="createPlan"}} {{paper-icon icon="add" size=2 classNames="patch-size-2"}} {{/paper-button}}

{{#if showDialog}}
  {{#paper-dialog title="New Permission" close="closeDialog"}}
    <md-dialog-content>
      {{paper-text label="Name" value=newScope.name}}
      {{paper-text label="Description" value=newScope.description}}
      {{paper-text label="Scope Code" value=newScope.scope}}
      {{paper-checkbox label="Is a 'paid for' permission" checked=newScope.paidFor}}
    </md-dialog-content>

    <div class="md-actions" layout="row">
      {{paper-button raised=true label="Save" classNames="md-primary" action="saveScope"}}
    </div>
  {{/paper-dialog}}
{{/if}}
