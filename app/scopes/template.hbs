{{#paper-toolbar}}
  <h2 class="md-toolbar-tools">
    {{#paper-sidenav-toggle class="menu-sidenav-toggle"}}
      {{paper-icon icon="menu"}}
    {{/paper-sidenav-toggle}}
    <span>Permissions</span>
  </h2>
{{/paper-toolbar}}

{{#paper-list}}
  {{#each content as |scope|}}
    {{scope-list-item scope=scope editable=true editScope=(action 'editScope' scope)}}
  {{/each}}
{{/paper-list}}

{{#paper-button classNames="md-fab md-primary bottom-right-button" action="createScope"}} {{paper-icon icon="add" size=2 classNames="patch-size-2"}} {{/paper-button}}

{{outlet}}
